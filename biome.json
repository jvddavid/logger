{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "maxSize": 134217728,
    "include": ["src/**/*", "test/**/*", "*.ts", "*.js", "*.json", "*.cjs"],
    "ignoreUnknown": true,
    "ignore": ["**/node_modules/**", "node_modules"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "recommended": true
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off"
      },
      "correctness": {
        "noNodejsModules": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true,
    "root": "./"
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "attributePosition": "multiline",
    "indentStyle": "space",
    "lineEnding": "lf",
    "indentWidth": 2,
    "lineWidth": 180
  },
  "javascript": {
    "globals": [],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 180,
      "arrowParentheses": "asNeeded",
      "attributePosition": "multiline",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "jsxQuoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "allowWrongLineComments": false
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 180,
      "quoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": false,
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 180
    }
  }
}
